<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= post.title %></title>

    <link rel="stylesheet" href="/stylesheets/style.css" />
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous" />
  </head>
  <body>
    <!-- Nav Start -->
    <nav class="navbar navbar-expand-lg navbar-light sticky-top glass">
      <div class="container-fluid">
        <a class="navbar-brand" href="#">
          <img id="logo_img" src="/images/UiPath logo.png" alt="UiPath Ace Blogs Logo" />
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <img src="/images/menu.png" alt="Menu" width="24" height="24" />
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/blogs">Blogs</a>
            </li>
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/gallery">Gallery</a>
            </li>
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/teams">Team</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>
    <!-- Nav End -->

    <main class="main-container">
      <div class="header">
        <h2><%= post.title %></h2>
      </div>
      <div class="blog-info">
        <p><%= post.author %></p>
        <p><%= post.date %></p>
        <p><%= post.readTime %></p>
        <p><%= post.category %></p>
      </div>
      <div class="container_table">
        <h2>Table of contents</h2>
        <div class="container_table_index">
          <ol>
            <% post.content.forEach((section, index) => { %>
            <li class="index"><%= section.type === 'text' ? section.value.split(' ').slice(0, 3).join(' ') + '...' : 'Image Section' %></li>
            <% }); %>
          </ol>
        </div>
      </div>
      <div class="content-container">
        <% post.content.forEach(section => { %>
          <% if (section.type === 'text') { %>
            <p class="container_para"><%= section.value %></p>
          <% } else if (section.type === 'image') { %>
            <img src="<%= section.src %>" class="img-fluid content-img" alt="<%= section.alt %>" />
          <% } %>
        <% }); %>
      </div>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
  </body>
</html>
